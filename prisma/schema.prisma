generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sellers {
  id        String              @id @default(uuid())
  name      String
  login     String              @unique
  phone     String              @unique
  password  String
  role      UsersRole           @default(SELLER)
  PINcode   Int
  createdAt DateTime            @default(now())
  email     String              @unique

  debters   Debters[]
  exampleMessages ExampleMessages[]
}

model Debters {
  id        String         @id @default(uuid())
  name      String
  phone     String
  debtId    String
  sellerId  String

  debt      Debt           @relation(fields: [debtId], references: [id])
  seller    Sellers        @relation(fields: [sellerId], references: [id])
  chats     Chat[]
  images    ImagesOfDebters[]
}

model Debt {
  id          String           @id @default(uuid())
  name        String
  term        String
  description String?

  debters     Debters[]
  payments    Payments[]
  images      ImagesOfDebts[]
}

model Admin {
  id       String     @id @default(uuid())
  username String     @unique
  password String
  phone    String
  role     UsersRole  @default(ADMIN)
}

model Chat {
  id        String        @id @default(uuid())
  debterId  String
  message   String
  status    MessageStatus @default(SENDING)

  debter    Debters       @relation(fields: [debterId], references: [id])
}

model Payments {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  debtId    String

  debt      Debt      @relation(fields: [debtId], references: [id])
}

model ExampleMessages {
  id      String    @id @default(uuid())
  text    String

  sellerId String
  seller   Sellers   @relation(fields: [sellerId], references: [id])
}

model ImagesOfDebters {
  id        String      @id @default(uuid())
  image     String

  debterId  String
  debter    Debters     @relation(fields: [debterId], references: [id])
}

model FAQ {
  id       String @id @default(uuid())
  question String
  answer   String
}

model ImagesOfDebts {
  id      String @id @default(uuid())
  image   String
  debtId  String

  debt    Debt   @relation(fields: [debtId], references: [id])
}

model Terms {
  id      String @id @default(uuid())
  term String
}

model Region {
  id      String @id @default(uuid())
  name String
}

enum UsersRole {
  ADMIN
  SUPER_ADMIN
  SELLER
  DEBTER
}


enum MessageStatus {
  SEND
  NOT_SEND
  SENDING
}
